{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "(gdb) Launch", // Give your configuration a descriptive name
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/myprogram", // Path to your executable
            "args": [], // Arguments to pass to your program
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // Working directory
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb", // Path to your gdb debugger
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
